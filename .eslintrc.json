{
  "root": true,
  "env": { "browser": true, "es2020": true },
  "extends": ["eslint:recommended"],
  "ignorePatterns": [
    "dist",
    ".eslintrc.json",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "vite.config.*",
    "playwright.config.*",
    "vitest.config.*"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
